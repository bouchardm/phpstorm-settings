<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="17" />
    <option name="FONT_FAMILY" value="Fira Code" />
    <option name="LINE_SPACING" value="1.8" />
    <option name="USE_LIGATURES" value="true" />
  </component>
  <component name="EditorSettings">
    <option name="languageBreadcrumbsMap">
      <map>
        <entry key="CSS" value="true" />
        <entry key="HTML" value="true" />
        <entry key="Haml" value="true" />
        <entry key="JSON" value="true" />
        <entry key="JavaScript" value="true" />
        <entry key="LESS" value="true" />
        <entry key="PHP" value="true" />
        <entry key="SASS" value="true" />
        <entry key="SCSS" value="true" />
        <entry key="Stylus" value="true" />
        <entry key="TypeScript" value="true" />
        <entry key="XHTML" value="true" />
        <entry key="XML" value="true" />
        <entry key="yaml" value="true" />
      </map>
    </option>
    <option name="SHOW_BREADCRUMBS_ABOVE" value="true" />
    <option name="IS_CAMEL_WORDS" value="true" />
    <option name="ADD_CARETS_ON_DOUBLE_CTRL" value="false" />
  </component>
  <component name="SqlEditorOptions">
    <option name="concatenateStringsOnEnter" value="true" />
    <option name="qualificationType" value="On collisions" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern icon="important" useCustomColors="true" pattern="\breview\b.*">
      <option name="FOREGROUND" value="e326cd" />
      <option name="FONT_TYPE" value="2" />
      <option name="ERROR_STRIPE_COLOR" value="e326cd" />
    </pattern>
    <pattern useCustomColors="true" pattern="(?:@|#[\s]{0,}(@?)|\/\/(?:\s|@|\s@))revi(?:ew|sion).*">
      <option name="FOREGROUND" value="c000a8" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern pattern="(?:@|((\/\*)?\*(\s?)?)|#(\s?)|\/\/(\s?)(@?))todo.*" />
    <filter name="review">
      <pattern index="3" />
    </filter>
    <filter name="todo">
      <pattern index="4" />
    </filter>
  </component>
</application>